/* 透明背景动画 */
.anim {
	-webkit-animation: implement;
	        animation: implement;
	/*动画名称*/
	-webkit-animation-duration: 0.4s;
	        animation-duration: 0.4s;
	/*动画持续时间*/
}
@-webkit-keyframes implement {
	0% {
		opacity: 0;
	}

	50% {
		opacity: 0.5;
	}

	100% {
		opacity: 1;
	}
}
@keyframes implement {
	0% {
		opacity: 0;
	}

	50% {
		opacity: 0.5;
	}

	100% {
		opacity: 1;
	}
}
/* 底部淡入 */
.coup-anim {
	-webkit-animation: fadeIn 0.4s .2s ease both;
	        animation: fadeIn 0.4s .2s ease both;
}
@-webkit-keyframes fadeIn {
	0% {
		opacity: 0;
		-webkit-transform: translateY(400rpx);
		        transform: translateY(400rpx)
	}

	100% {
		opacity: 1;
		-webkit-transform: translateY(0);
		        transform: translateY(0)
	}
}
@keyframes fadeIn {
	0% {
		opacity: 0;
		-webkit-transform: translateY(400rpx);
		        transform: translateY(400rpx)
	}

	100% {
		opacity: 1;
		-webkit-transform: translateY(0);
		        transform: translateY(0)
	}
}

